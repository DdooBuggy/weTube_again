extends base

block content 
    if errorMessage
        div=errorMessage
    form(method="POST" enctype="multipart/form-data")
        label(for="video") Video File 
        input(name="video" type="file" required id="video" accept="video/*")
        input(name="title" type="text" placeholder="Title" required minlegth=2)
        input(name="description" type="text" placeholder="Description" required minlegth=2)
        input(name="hashtags" type="text" placeholder="Hashtags, seperated by comma" required)
        input(type="submit" value="Upload video")