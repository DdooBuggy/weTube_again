extends base

block content
    div#videoContainer(data-id=video._id)
        video(src=video.fileUrl)
        div#videoControls.videoControls
            div.videoControls__play
                span#play.videoControls__playBtn
                    i.fas.fa-play 
                div.videoControls__time
                    span#currenTime 00:00
                    span  / 
                    span#totalTime 00:00
            input(type="range" step=1 value=0 min=0)#timeline.videoControls__timeline
            div.videoControls__volume
                input(type="range" step=0.1 value=0.5 min=0 max=1)#volume
                span#mute 
                    i.fas.fa-volume-up
            div 
                span#fullScreen
                    i.fas.fa-expand
    div.video__data
        div.video__info
            h3.video__title=video.title
            div.video__info-sub
                span ì¡°íšŒìˆ˜ #{video.meta.views} íšŒ â€¢ 
                span=video.createdAt 
        div.video__editDelete
            if String(video.owner._id) === String(loggedInUser._id)
                a(href=`${video.id}/edit`) Edit Video
                a(href=`${video.id}/delete`) Delete Video
    div.video__summary
        div.video__uploader
            a(href=`/users/${video.owner._id}`).video__uploader-avatar
                img(src="/" + video.owner.avatarUrl)
            a(href=`/users/${video.owner._id}`).video__uploader-name
                span=video.owner.name
        p #{video.description}
    if loggedIn
        div.video__add-comments
            form.video__comment-form#commentForm
                textarea(cols="30" rows="1" placeholder="Write a nice comment..." maxlength=50)#textarea
                input(type="submit" value="Comment")
    div.video__comments
        ul 
            each comment in video.comments.reverse()
                li.video__comment(data-id=comment._id)
                    div.video__comment-ownerAndText
                        a(href=`/users/${comment.owner._id}`)
                        if comment.owner.avatarUrl === "" || !comment.owner.avatarUrl
                            span ðŸ˜€
                        else
                            img(src=comment.owner.avatarUrl)
                        span   #{comment.text}
                    if String(comment.owner._id) === String(loggedInUser._id)
                        span.video__comment-deleteBtn
                            i.fas.fa-trash
block scripts 
    script(src="/static/js/videoPlayer.js")
    if loggedIn
        script(src="/static/js/commentSection.js") 