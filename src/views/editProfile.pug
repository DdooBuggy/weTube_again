extends base

block content 
    if errorMessage
        small=errorMessage
    form(method="POST")
        span User Id
        input(name="userId" type="text" placeholder="userId" required value=loggedInUser.userId)
        span Email
        input(name="email" type="email" placeholder="email" required value=loggedInUser.email)
        span Name
        input(name="name" type="text" placeholder="name" required value=loggedInUser.name)
        span Locagion
        input(name="location" type="text" placeholder="Location" value=loggedInUser.location)
        input(type="submit" value="Update")