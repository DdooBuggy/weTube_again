extends base

block content 
    if errorMessage
        small=errorMessage
    img(src="/"+loggedInUser.avatarUrl width="100" height="100")
    form(method="POST" enctype="multipart/form-data")
        label(for="avatar") Avatar 
        input(type="file" id="avatar" name="avatar" accept="image/*")
        span User Id
        input(name="userId" type="text" placeholder="userId" required value=loggedInUser.userId)
        span Email
        input(name="email" type="email" placeholder="email" required value=loggedInUser.email)
        span Name
        input(name="name" type="text" placeholder="name" required value=loggedInUser.name)
        span Locagion
        input(name="location" type="text" placeholder="Location" value=loggedInUser.location)
        input(type="submit" value="Update")
        hr
        if !loggedInUser.socialOnly
            a(href="changePassword") Change Password &rarr;