doctype html 
html(lang="ko")
    head 
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body 
        header 
            h1=pageTitle
            nav 
                ul 
                    li
                        a(href="/") Home
                    li
                        a(href="/search") Search
                    if loggedIn
                        li 
                            a(href="/logout") Logout
                        li 
                            a(href="/profile") #{loggedInUser.userId}'s Profile
                    else 
                        li
                            a(href="/join") Join
                        li
                            a(href="/login") Log in
                        li
                            a(href="/videos/upload") Upload
        main
            block content
    include partials/footer