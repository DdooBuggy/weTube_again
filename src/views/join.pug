extends base

block content 
    if errorMessage
        small=errorMessage
    form(method="POST")
        input(name="userId" type="text" placeholder="userId" required minlength=2 maxlength=10)
        input(name="email" type="email" placeholder="email" required minlength=2 maxlength=50)
        input(name="password" type="password" placeholder="password" required minlength=2 maxlength=20)
        input(name="password2" type="password" placeholder="confirm password" required minlength=2 maxlength=20)
        input(name="name" type="text" placeholder="name" required minlength=2 maxlength=10)
        small This is optional
        input(name="location" type="text" placeholder="location" maxlength=50)
        input(type="submit" value="Join")
        include partials/social-login
    div.auth-switch
        span Already have an account? 
        a(href="/login") Log in now &rarr; 